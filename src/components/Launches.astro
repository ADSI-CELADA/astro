---
import CardLaunches from "./CardLaunches.astro";
import { getLatestLaunches } from "../api/spacex";

const launches = await getLatestLaunches();

---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
  {
    launches.map((launche) => (
      <CardLaunches 
        id={launche.id}
        img={launche.links.patch.small}
        details={launche.details}
        flightNUmber={launche.flight_number}
        success={launche.success}
      />
    ))
  }
</div>
